    "priority_levels": [
      "urgent",
      "high", 
      "medium",
      "low"
    ],
    "test_intents": {
      "regression": {
        "name": "Regression Testing",
        "description": "Full regression test suite",
        "default_tags": ["@regression", "@smoke", "@critical"]
      },
      "e2e": {
        "name": "End-to-End Testing",
        "description": "Complete user journey testing", 
        "default_tags": ["@e2e", "@integration", "@flow"]
      },
      "smoke": {
        "name": "Smoke Testing",
        "description": "Quick validation of core functionality",
        "default_tags": ["@smoke", "@sanity", "@quick"]
