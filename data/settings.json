      "api": {
        "name": "API Testing",
        "description": "Backend API and integration testing",
        "default_tags": ["@api", "@backend", "@integration"]
      },
      "ui": {
        "name": "UI Testing", 
        "description": "User interface and visual testing",
        "default_tags": ["@ui", "@visual", "@frontend"]
      },
      "performance": {
        "name": "Performance Testing",
        "description": "Load and performance validation",
        "default_tags": ["@performance", "@load", "@stress"]
      }
    }
  },
  "integration": {
    "github": {
      "enabled": true,
      "repository": "balajiregt/qa-tracking-portal",
      "branch": "main",
      "auto_commit": true,
      "commit_message_template": "QA Portal: {action} - {details}"
    },
    "playwright": {
      "enabled": true,
      "supported_formats": [".zip", ".json"],
      "auto_extract_tests": true
